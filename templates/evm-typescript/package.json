{
  "name": "switchboard-evm-template",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "help": "npx hardhat help",
    "accounts": "npx hardhat accounts",
    "balances": "npx hardhat balances",
    "compile": "npx hardhat compile",
    "build:types:ts": "pnpm exec hardhat typechain",
    "build:types:rust": "forge bind --bindings-path ./bindings --overwrite",
    "build:types": "run-p build:types:ts build:types:rust",
    "build:contracts": "forge build --optimize",
    "build": "pnpm run build:contracts && pnpm run build:types",
    "node:hh": "npx hardhat node",
    "clean": "rimraf abis artifacts bindings cache cache_hardhat node_modules out typechain-types",
    "test:hh": "npx hardhat test",
    "test:forge": "forge test -vvv",
    "coverage": "npx hardhat coverage",
    "size": "npx hardhat size-contracts",
    "abi": "hardhat export-abi",
    "lint": "solhint \"{src,test}/**/*.sol\"",
    "localnet": "anvil & sleep 5"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-foundry": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.4",
    "@switchboard-xyz/evm.js": "^3.12.18",
    "@switchboard-xyz/cli": "^3.0.5",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "dotenv": "*",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.5",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "npm-run-all": "^4.1.5",
    "solhint": "^3.6.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "web3": "4.0.0-alpha.0"
  }
}
